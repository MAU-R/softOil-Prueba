//definimos los clientes y el source del database para usar postgre con el url definido en .env

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
//Definimos el modelo del usuario 
model users {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  userName     String
  createdAt DateTime @default(now())
}
//Definimos el modelo de la tabla de logs
model activity_log {
  id        Int      @id @default(autoincrement())
  activity  String
  timestamp DateTime @default(now())
}